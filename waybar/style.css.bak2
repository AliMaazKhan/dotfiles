@import "/home/alimaaz/.cache/wal/colors-waybar.css";
* {
  font-family: "JetBrains Mono Nerd Font", FontAwesome, Roboto, Helvetica, Arial,
    sans-serif;
  font-size: 10px;
  font-weight: 600;
}

window#waybar {
  background-color: rgba(24, 25, 37, 0); /* Darker background */
  color: @color8; /* Softer off-white text */
  padding-left: 10px;
  transition: background-color 0.5s;
  border-radius: 8px;
}

.modules-right,
.modules-center,
.modules-left {
  margin-top: 2px;
  margin-left: 8px;
  margin-right: 8px;
  padding: 2px;
  background-color: rgba(0, 0, 0, 0.4); /* Darker background for modules */
  border-radius: 8px;
}

.modules-center {
  padding: 1px 4px;
}

#workspaces button {
  padding: 0 6px;
  margin-right: 2px;
  border-radius: 15px;
  border: none;
  background-color: @background; /* Dark background */
  color: @foreground;
}

#workspaces button:hover {
  background-color: @color15; /* Subdued lavender hover effect */
}

#workspaces button.active {
  background-color: @color5; /* Deep blue for active workspace */
  color: @foreground;
}

#workspaces button.focused {
  background-color: @color2; /* Softer pink for focused workspace */
  color: #ffffff;
}

#workspaces button.urgent {
  background-color: #f28fad; /* Muted urgent red */
  color: #ffffff;
}

/* Module Styling */
#battery,
#cpu,
#memory,
#disk,
#temperature,
#backlight,
#network,
#pulseaudio,
#wireplumber,
#custom-media,
#tray,
#mode,
#idle_inhibitor,
#scratchpad,
#power-profiles-daemon,
#mpd {
  padding: 0 6px;
  border-radius: 10px;
  background-color: @background-color; /* Dark background */
  color: #ffffff;
}

#battery {
  background-color: #a3c78c; /* Subdued green for battery */
}

#battery.charging,
#battery.plugged {
  background-color: #8fdbb1; /* Lighter green for charging */
  color: #ffffff;
}

#battery.critical:not(.charging) {
  background-color: #f28fad; /* Muted red for critical battery */
  animation: blink 0.5s steps(12) infinite alternate;
}

@keyframes blink {
  to {
    background-color: #ffffff;
    color: #f28fad;
  }
}

#cpu {
  background-color: @color4; /* Soft blue for CPU */
}

#memory {
  background-color: @color14; /* Dusty purple for memory */
}

#disk {
  background-color: @color11; /* Muted brown for disk */
}

#backlight {
  background-color: #f5c878; /* Duller yellow for backlight */
}

#network {
  background-color: #5f9cda; /* Darker aqua for network */
}

#network.disconnected {
  background-color: #f28fad; /* Red for disconnected network */
}

#pulseaudio {
  background-color: @color5; /* Soft purple for sound */
  color: #ffffff;
}

#pulseaudio.muted {
  background-color: #7d849c; /* Gray for muted sound */
  color: #d1d9e3;
}

#tray {
  background-color: @color6; /* Muted teal for tray */
}

/* Custom modules */
#custom-date,
#custom-google,
#custom-telegram,
#custom-youtube {
  border-radius: 10px;
  padding: 2px 6px;
  padding-right: 9px;
  margin-right: 5px;
  background-color: rgba(40, 42, 59, 0.9);
  color: #ffffff;
}

#custom-date {
  background-color: @color13; /* Soft purple for date */
}

#custom-google {
  background-color: @color12; /* Muted blue for Google */
}

#custom-telegram {
  background-color: @color4; /* Muted blue for Telegram */
}

#custom-youtube {
  background-color: @color10; /* Red for YouTube */
}

/* Clock styling */
#clock {
  background-color: @color8; /* Darker gray */
  color: #ffffff; /* Light gray for contrast */
  padding: 2px 5px;
  border-radius: 10px;
}

#mpd {
  background-color: #a3c78c; /* Muted green for music */
  color: #ffffff;
}

#mpd.disconnected {
  background-color: #f28fad; /* Red for disconnected */
}

#mpd.paused {
  background-color: #f5c878; /* Duller yellow for paused */
}

/* Privacy module styling */
#privacy-item {
  padding: 0 5px;
  color: white;
}

#privacy-item.screenshare {
  background-color: #f28fad; /* Muted orange for screenshare */
}

#privacy-item.audio-in {
  background-color: #a3c78c; /* Green for audio-in */
}

#privacy-item.audio-out {
  background-color: #5f9cda; /* Aqua for audio-out */
}

#custom-spotify {
  background-color: #1db954; /* Spotify green */
  color: #ffffff;
  border-radius: 10px;
  padding: 2px 6px;
  margin-right: 5px;
}

#custom-spotify:hover {
  background-color: #1ed760; /* Slightly lighter green on hover */
}

#custom-mediabuttonleft,
#custom-mediabuttonright {
  color: #ffffff;
  font-size: 10px;
}
